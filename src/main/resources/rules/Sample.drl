package com.sample
 
// import com.sample.DroolsTest.Message;

declare enum statusType
HELLO(0),GOODBYE(1);
	type_: int
end

declare Message
	message: String
	status: int
	statType: statusType
end

rule "Init"
	when
	then
		insert(new Message("Szmata", 1, statusType.HELLO));
end;
 
rule "Hello World"
    when
        m : Message( status == Message.statType.HELLO, myMessage : message )
    then
        System.out.println( myMessage );
        m.setMessage( "Goodbye cruel world" );
        m.setStatType( statusType.GOODBYE );
        update( m );
end

rule "GoodBye"
    when
        Message( status == Message.GOODBYE, myMessage : message )
    then
        System.out.println( myMessage );
end
